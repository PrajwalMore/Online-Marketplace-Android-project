<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8AE41">


            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Asset"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="28dp" />

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_below="@id/t1"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="10dp">
            <ImageView
android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="200dp"

                android:layout_marginTop="10dp"
                android:src="@drawable/pic" />
</androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:layout_alignParentStart="true"

                android:layout_marginStart="66dp"
                android:layout_marginTop="16dp"
                android:text="Name:"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/AssetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/name"
                android:background="@drawable/shape2"
                android:hint="Enter asset name"
                android:textColor="#ffffff"
                android:textColorHint="#8c8c8c"
                android:textSize="23dp" />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/AssetName"
                android:layout_alignEnd="@id/name"

                android:layout_marginTop="10dp"
                android:text="Price:"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AssetName"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/price"
                android:background="@drawable/shape2"
                android:hint="Enter price"
                android:textColor="#ffffff"
                android:textColorHint="#8c8c8c"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount"
                android:layout_alignEnd="@id/price"
                android:layout_marginTop="10dp"
                android:text="Category:"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/cateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/cate"
                android:background="@drawable/shape2"
                android:hint="eg: Vehicle,electronics"

                android:textColor="#ffffff"
                android:textColorHint="#8c8c8c"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cateText"
                android:layout_alignEnd="@id/cate"
                android:layout_marginTop="10dp"
                android:text="Description:"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/descText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cateText"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/desc"
                android:background="@drawable/shape2"
                android:hint="Description of product"
                android:textColor="#ffffff"
                android:textColorHint="#8c8c8c"
                android:textSize="23dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:layout_below="@id/descText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:text="Upload"
                android:textColorHint="#8c8c8c" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>