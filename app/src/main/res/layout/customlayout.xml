<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    >

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="#F8AE41"
                android:padding="10dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:background="#F7AD41"
                android:hint="txt"
                android:padding="2dp"
                android:textColor="#000000"
                android:textSize="19dp"
                app:layout_constraintTop_toBottomOf="@+id/img"
                tools:layout_editor_absoluteX="0dp"
                tools:text="TextBOX" />

            <TextView
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/txt"
                android:background="#E91E63"
                android:gravity="center"
                android:text="Call Seller"
                android:textColor="#000000"
                android:textSize="28dp"
                app:layout_constraintTop_toBottomOf="@+id/txt"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="61dp"
                android:layout_alignStart="@id/btn"
                android:layout_alignTop="@id/btn"
                android:layout_alignRight="@id/btn"
                android:layout_alignBottom="@+id/btn"
                android:layout_marginStart="36dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn"
                app:layout_constraintStart_toStartOf="@+id/btn"
                app:srcCompat="@android:drawable/ic_menu_call" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
